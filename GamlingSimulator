using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace GamlingSimulator
{
    internal class Stake100everyday1everygame
    {
        public static void Gambler()
        {
            int stake = 100;
            int betpergame = 1;
            
        }
         public static void WinLose()
        {
            Random makebet = new Random();
            int stake = makebet.Next(0, 2);
            int betpergame = 1;
            if (stake == betpergame)
            {
                Console.WriteLine("Win");
                Console.ReadLine();
            }
            else
            {
                Console.WriteLine("lose");
                Console.ReadLine();
            }
    }
}
